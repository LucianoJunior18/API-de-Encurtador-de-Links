generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  links     Link[]
}

model Link {
  id         Int      @id @default(autoincrement())
  original   String
  shortCode  String   @unique
  clicks     Int      @default(0)
  deletedAt  DateTime?
  createdAt  DateTime @default(now())
  userId     Int

  user       User     @relation(fields: [userId], references: [id])
}
